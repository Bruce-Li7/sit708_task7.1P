<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ListActivity">

    <include layout="@layout/layout_title_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt0"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_bg_1"
            android:text="CREATE A NEW ADVERT"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/shape_bg_2"
            android:text="SHOW ALL LOST Or FOUND ITEMS"
            android:textSize="20sp" />



    </LinearLayout>


</LinearLayout>